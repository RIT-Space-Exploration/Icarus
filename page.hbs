{{!-- Add Layout --}}
{{!< default}}
{{#post}}
<div class="container">
    <section class="post-wrapper">
        <article class="post" style="max-width:900px;margin:0 auto;min-height: 100vh;">
        	<div class="post-card u-card-shadow">
            	<h1 class="post-title">{{title}}</h1>
            	{{#if feature_image}}<figure class="post-image"><img src="{{feature_image}}" alt="{{title}}" class="img-responsive"/></figure>{{/if}}
            	<div class="post-body">{{content}}</div>
            </div>	
        </article>
    </section>
</div>
{{/post}}
